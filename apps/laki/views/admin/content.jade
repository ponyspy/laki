extends layout

block header_meta
	- var content_title= 'РЕДАКТИРОВАТЬ КОНТЕНТ'

block header_include
	- var include_libs_css = ['font-awesome.css', 'wysiwyg-editor.min.css']
	- var include_css = ['add.css']
	- var include_libs_js = ['wysiwyg.min.js', 'wysiwyg-editor.min.js']
	- var include_js = ['editor.js', 'add.js']

block sub_menu
	a.sub_item.back_link(href='/admin') Назад
	span.sub_item.toggle_eng Перевод
	.sub_right_block
		input.form_cancel(type='submit', value='Отменить')
		input.form_submit(type='submit', value='Сохранить')

block content
	.form_block
		.title= content_title
		form(action='', method='post', enctype="multipart/form-data")
			.form_title Вступление в блоге:
			.content
				textarea.ru.editor(name='blog_title[ru]')= content.blog_title_ru
				textarea.en.editor(name='blog_title[en]')= content.blog_title_en
			.form_title Телефон для оптовиков:
			input(type='text', name='phone', value=content.phone)
			.form_title Бланк заказа [PDF]:
			input(type='file', name='order', accept='application/pdf')