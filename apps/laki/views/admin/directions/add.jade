extends ../layout
include ../_forms.jade

block header_meta
	- var content_title= 'ДОБАВИТЬ НАПРАВЛЕНИЕ'

block header_include
	- var include_libs_css = ['pickmeup.min.css', 'font-awesome.css', 'wysiwyg-editor.min.css']
	- var include_css = ['add.css']
	- var include_libs_js = ['jquery.pickmeup.min.js', 'wysiwyg.min.js', 'wysiwyg-editor.min.js']
	- var include_js = ['editor.js', 'add.js', 'a_events.js']

block sub_menu
	a.sub_item.back_link(href='/admin/directions') Назад
	span.sub_item.toggle_eng Перевод
	.sub_right_block
		input.form_cancel(type='submit', value='Отменить')
		input.form_submit(type='submit', value='Добавить')

block content
	.form_block
		.title= content_title
		form(action="", method="post", enctype="multipart/form-data")
			.form_title Название:
			+form_text_single('title')
			.form_title Синоним:
			input(type='text', name='sym')
			.form_title Вступление:
			+form_text_single('intro')
			.form_title Цитата:
			+form_text_single('quote')
			.form_title Описание:
			+form_text_multi('description')
			.form_title Обложка:
			+form_single_file('poster')(accept='image/jpeg,image/png,image/gif')
			.form_title Коллекции:
			+form_multiple_select('collects', collects)
			.form_title Список коллекций:
			select(name='collects_list')
				option(value='show') Показать
				option(value='hide') Скрыть
			.form_title Колонки на главной:
			select(name='main_columns')
				option(name='1') 1
				option(name='2') 2
				option(name='3') 3
			.form_title Стиль заполнения:
			select(name='main_style')
				option(value='cover') Заполнение
				option(value='contain') Портрет
			.form_title Статус:
			select(name='status')
				option(value='base') Обычный
				option(value='hidden') Скрытый
			.form_title Дата публикации:
			+form_date('date')
