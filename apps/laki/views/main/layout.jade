doctype html
html
	head
		include header
	body(class=menu_active)
		.main_block
			.title_block
				a.logo(href='/') xDance
				.menu_block
					span: a.hidden(href='/concept', class=menu_active == 'concept' ? 'active' : '') Концепция
					span: a.hidden(href='/buy', class=menu_active == 'buy' ? 'active' : '') Где купить?
					span: a.hidden(href='/blog', class=menu_active == 'blog' ? 'blog' : '') Блог
				if (session && session.user_id)
					.stargazer_block
							a(href='/auth') stargazer
							span= ' | '
							a(href='/auth/logout') выход
			.content_block
				block content
			.footer_block
				span xDance тм является зарегистрированным товарным знаком ООО «ОЛБО».
				span Все права защищены.
		include counters