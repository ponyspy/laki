doctype html
html
	head
		include header
	body(class=menu_active)
		.maket_block
			.title_block: .title_inner
				a.logo(href='/'): img(src='/stuff/laki/icons/logo/main_w.svg')
				.lang
					if locale == 'en'
						a(href='/lang/ru') рус
					if locale == 'ru'
						a(href='/lang/en') eng
				.menu_block
					a.hidden(href='/#collectios')= __('Коллекции')
					a.hidden(href='/concept')= __('Концепция')
					a.hidden(href='/blog')= __('Блог')
					a.hidden(href='/buy')= __('Где купить?')
				if (session && session.user_id)
					.stargazer_block
							a(href='/auth') stargazer
							span= ' | '
							a(href='/auth/logout') выход
			block over
			.main_block
				.content_block: .content_inner
					block content
				.footer_block: .footer_inner
					.social_block
						a(href='#', target='_blank'): img(src='/stuff/laki/icons/social/instagram.png')
						a(href='#', target='_blank'): img(src='/stuff/laki/icons/social/twitter.png')
						a(href='#', target='_blank'): img(src='/stuff/laki/icons/social/vk.png')
						a(href='#', target='_blank'): img(src='/stuff/laki/icons/social/facebook.png')
					.copy_block
						div= __('xDance тм является зарегистрированным товарным знаком ООО «ОЛБО».')
						div= __('Все права защищены.')
		include counters