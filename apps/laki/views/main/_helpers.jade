mixin sim_collects(sim_items)
	.sim_collects
		.sim_title= __('Другие коллекции')
		.sim_items
			each sim in sim_items
				a.sim_item(class=sim.poster_hover ? 'hover': '', href='/collections/' + (sim.sym ? sim.sym : sim._short_id))
					.sim_item_title: span= get_locale(sim.title, locale)
					.sim_item_image: .image_in
						.image.main(style='background-image: url(' + sim.poster + ')')
						if sim.poster_hover
							.image.hover(style='background-image: url(' + sim.poster_hover + ')')
						.quote: span= get_locale(sim.quote, locale)

mixin instagram_cut()
	.cut.instagram
		img.instagram_logo(src='/stuff/laki/icons/social/instagram.png')
		a.instagram_desc(href='#') XDance Sky Instagram

mixin blog_cut(factor)
	//- factor = 0 true
	//- factor = 1 random
	//- factor = 2 false
	.cut.blog
		if Math.random() >= 0.5 * ((factor != undefined) ? factor : 1)
			span!= __('Рассказываю о создании коллекций и приглашаю к обсуждению в свой <a href="/blog">блог</a>')
		else
			span!= __('Читайте экспертный <a href="/blog">блог</a> Елены Латаш')