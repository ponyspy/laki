@media screen and (max-width: 840px)
	@import 'mobile/_direction.styl'

.over_block
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	background-color black
	background-size cover
	background-position center
	background-repeat no-repeat
	position absolute
	.direction_head
		max-width 1024px
		height 100%
		padding-left 20px
		padding-right 20px
		margin 140px auto
		position relative
		color white
		.direction_title
			max-width 600px
			font 42pt/42pt 'RegalTextPro Med'
		.direction_description
			hyphens auto
			margin-top 80px
			max-width 600px
			font 18pt/24pt 'Gerbera'

.main_block
	position absolute
	width 100%
	top 100%

.direction_collects
	margin-bottom 80px
	.collect_item
		margin-top 40px
		.collect_title
			padding-top 40px
			padding-bottom 40px
			text-align center
			font 42pt/42pt 'RegalTextPro Med'
			a
				text-decoration none
				color black
				border-bottom 2px solid transparent
				&:hover
					border-bottom 2px solid black
		.collect_slider
				user-select none
				max-width 1024px
				height 480px
				margin 0 auto
				position relative
				.swiper-button-next
					position absolute
					top 50%
					right 40px
				.swiper-button-prev
					position absolute
					top 50%
					left 40px
				.swiper-pagination
					margin 0 auto
					position relative
					.swiper-pagination-bullet
						margin-top 20px
						margin-right 8px
						&:last-child
							margin-right 0
				.swiper-container
						max-width 740px
						height 100%
					.slide_item
						width 100%
						height 100%
						background-size cover
						background-position center
						background-repeat no-repeat
		.collect_description
			hyphens auto
			padding-top 60px
			font 18pt/24pt 'RegalTextPro RegBold'
			max-width 740px
			margin 0 auto
