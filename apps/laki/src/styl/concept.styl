@media screen and (max-width: 840px)
	@import 'mobile/_concept.styl'

.title_block
	position relative

.concept_intro
	margin-top 80px
	margin-bottom 180px
	font 26pt/32pt 'RegalTextPro RegBold'
	hyphens auto

.author_block
	background-color rgba(246, 245, 242, 0.4)
	padding-left 40px
	padding-right 40px
	.author_meta
		text-align center
		padding-top 40px
		.author_photo
			display block
			margin 0 auto
			width 140px
			border-radius 100%
		.author_name
			margin-top 20px
			font 16pt/18pt 'Gerbera'
		.author_status
			margin-top 10px
			font 12pt/14pt 'Gerbera'
		.author_quote
			margin-top 40px
			margin-bottom 40px
			font 22pt/24pt 'RegalTextPro MedIt'
	.author_description
		max-width 740px
		margin 0 auto
		hyphens auto
		font 16pt/22pt 'RegalTextPro RegBold'
		a
			color black
			font 16pt/22pt 'RegalTextPro Med'

.cut.blog
	border-bottom none
	margin-top 40px

.concept_items
	margin-top 80px
	max-width 740px
	margin 0 auto
	.concept_item
		margin-top 80px
		margin-bottom 80px
		.item_title
			text-align center
			margin-bottom 20px
			font 32pt/38pt 'RegalTextPro RegBold'
		.item_desc
			hyphens auto
			font 16pt/22pt 'RegalTextPro RegBold'