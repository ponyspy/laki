@media screen and (max-width: 840px)
	@import 'mobile/_main.styl'

.over_block
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	background-color black

.slider_block
	width 100%
	height 100%
	.slider_arrows
		max-width 1024px
		height 0
		top 50%
		margin 0 auto
		position relative
	.slide_item
		width 100%
		height 100%
		background-size cover
		background-position center
		background-repeat no-repeat
		.slide_inner
			max-width 1024px
			height 100%
			padding-left 20px
			padding-right 20px
			margin 140px auto
			position relative
			color white
			.slide_title
				font 60pt/62pt 'RegalTextPro RegBold'
			.slide_s_title
				max-width 600px
				margin-top 20px
				font 18pt/24pt 'Gerbera'
			.slide_quote
				max-width 400px
				font 20pt/30pt 'RegalTextPro RegBold'
				position absolute
				bottom 200px

.main_block
	position absolute
	width 100%
	top 100%

.directions_block
	overflow hidden
	.direction_item
		margin 0 auto
		margin-top 80px
		margin-left -20px
		margin-right -20px
		.direction_title
			margin-bottom 40px
			margin-left 20px
			margin-right 20px
			text-align center
			font 18pt/24pt 'Gerbera'
			a
				color black
				text-decoration none
				display inline-block
				border-bottom 2px solid transparent
				&:hover
					border-bottom 2px solid black
		.direction_collects
			overflow hidden
			&.x1 .collect_item
				width 100%
				.collect_image
					padding-top 45%
			&.x2 .collect_item
				width 50%
				.collect_image
					width 100%
					padding-top 100%
					box-sizing border-box
			&.x3 .collect_item
				width 33.3333333333%
				.collect_image
					width 100%
					padding-top 100%
					box-sizing border-box
					.quote
						font-size 18pt!important
						line-height 24pt!important
				.collect_title
					font 32pt/32pt 'RegalTextPro RegBold'
			.collect_item
				vertical-align top
				display inline-block
				margin-bottom 60px
				color black
				text-decoration none
				&:hover
					.image
						filter: blur(5px)
						transition .3s linear
					.quote
						opacity 1!important
						transition .2s linear
				.collect_quote
					display none
					text-align center
					font 18pt/24pt 'RegalTextPro RegBold'
					margin-top 10px
					padding-left 40px
					padding-right 40px
				.collect_title
					text-align center
					font 48pt/48pt 'RegalTextPro RegBold'
					span
						margin 0 auto
						display block
						width 80%
				.collect_signature
					padding-left 20px
					padding-right 20px
					text-align center
					font 14pt/16pt 'RegalTextPro RegBold'
				.collect_image
					position relative
					margin 0 auto
					.image_in
						top 20px
						left 20px
						right 20px
						bottom 20px
						position absolute
						margin auto
						overflow hidden
						.image
							-webkit-backface-visibility: hidden;
							-webkit-transform: translateZ(0) scale(1.0, 1.0);
							transition .3s linear
							position absolute
							top -5px; left -5px; right -5px; bottom -5px
							background-size cover
							background-position center
							background-repeat no-repeat
						.quote
							transition .2s linear
							text-align center
							width 80%
							top 0; left 0; right 0; bottom 0
							margin auto
							position absolute
							display table
							opacity 0
							z-index 999
							color white
							font 20pt/30pt 'RegalTextPro RegBold'