@media screen and (max-width: 680px)
	@import 'mobile/_main.styl'

.over_block
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	background-color rgb(231, 197, 123)

.slider_block
	width 100%
	height 100%
	.slide_item
		width 100%
		height 100%
		.slide_inner
			max-width 1200px
			height 100%
			padding-left 20px
			padding-right 20px
			margin 120px auto
			position relative
			.slide_title
				font-size 40pt
			.slide_s_title
				font-size 20pt
			.slide_quote
				font-size 20pt
				position absolute
				bottom 200px

.main_block
	position absolute
	width 100%
	top 100%

.directions_block
	background-color green
	overflow hidden
	.direction_item
		margin 40px auto
		.direction_title
			text-align center
			font-size 22pt
		.direction_collects
			overflow hidden
			&.x1 .collect_item
				width 100%
				.collect_image
					padding-top 30%
			&.x2 .collect_item
				width 50%
				.collect_image
					width 95%
					padding-top 95%
					box-sizing border-box
			&.x3 .collect_item
				width 33.3333333333%
				.collect_image
					width 95%
					padding-top 95%
					box-sizing border-box
			.collect_item
				float left
				margin-bottom 20px
				background-color rgb(101, 102, 107)
				.collect_title
					text-align center
				.collect_image
					background-color rgb(243, 153, 219)
					position relative
					margin 0 auto
					.quote
						top 0
						position absolute