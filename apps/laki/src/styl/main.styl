@media screen and (max-width: 680px)
	@import 'mobile/_main.styl'

.over_block
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	background-color rgb(231, 197, 123)

.slider_block
	width 100%
	height 100%
	.slide_item
		width 100%
		height 100%
		.slide_inner
			max-width 1200px
			height 100%
			padding-left 20px
			padding-right 20px
			margin 120px auto
			position relative
			.slide_title
				font-size 40pt
			.slide_s_title
				font-size 20pt
			.slide_quote
				font-size 20pt
				position absolute
				bottom 200px

.main_block
	position absolute
	width 100%
	top 100%

.directions_block
	background-color green