@media screen and (max-width: 680px)
	@import 'mobile/_main.styl'

.cut
	margin-left 20px
	margin-right 20px
	margin-bottom 60px

.over_block
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	background-color black

.slider_block
	width 100%
	height 100%
	.slide_item
		width 100%
		height 100%
		background-size cover
		background-position center
		background-repeat no-repeat
		.slide_inner
			max-width 1200px
			height 100%
			padding-left 20px
			padding-right 20px
			margin 120px auto
			position relative
			color white
			.slide_title
				font 40pt/42pt 'RegalTextPro Med'
			.slide_s_title
				margin-top 20px
				font 20pt/22pt 'RegalTextPro RegBold'
			.slide_quote
				font 20pt/22pt 'RegalTextPro RegBold'
				position absolute
				bottom 200px

.main_block
	position absolute
	width 100%
	top 100%

.content_inner
	max-width 1240px
	padding-left 0!important
	padding-right 0!important

.directions_block
	// background-color green
	overflow hidden
	.direction_item
		margin 40px auto
		.direction_title
			margin-bottom 40px
			text-align center
			font 22pt/24pt 'RegalTextPro Med'
		.direction_collects
			overflow hidden
			&.x1 .collect_item
				width 100%
				.collect_image
					padding-top 40%
			&.x2 .collect_item
				width 50%
				.collect_image
					width 100%
					padding-top 100%
					box-sizing border-box
			&.x3 .collect_item
				width 33.3333333333%
				.collect_image
					width 100%
					padding-top 100%
					box-sizing border-box
				.collect_title
					font 32pt/32pt 'RegalTextPro Med'
			.collect_item
				display block
				float left
				margin-bottom 20px
				// background-color rgb(101, 102, 107)
				color black
				text-decoration none
				.collect_title
					text-align center
					font 42pt/42pt 'RegalTextPro Med'
					span
						padding-left 20px
						padding-right 20px
				.collect_image
					// background-color rgb(243, 153, 219)
					position relative
					margin 0 auto
					.image_in
						top 20px
						left 20px
						right 20px
						bottom 20px
						position absolute
						margin auto
						overflow hidden
						// background-color rgb(37, 86, 125)
						&:hover
							.image
								filter: blur(5px)
								transition .3s linear
							.quote
								opacity 1
								transition .2s linear
						.image
							transition .3s linear
							width 100%
							height 100%
							background-size cover
							background-position center
							background-repeat no-repeat
						.quote
							transition .2s linear
							text-align center
							width 80%
							top 0
							left 0
							right 0
							bottom 0
							margin auto
							position absolute
							display table
							opacity 0
							// background-color red
							span
								color white
								font 22pt/24pt 'RegalTextPro Med'
								display table-cell
								vertical-align middle