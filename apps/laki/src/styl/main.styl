@media screen and (max-width: 680px)
	@import 'mobile/_main.styl'

.over_block
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	background-color rgb(231, 197, 123)

.slider_block
	width 100%
	height 100%
	.slide_item
		width 100%
		height 100%
		.slide_inner
			max-width 1200px
			height 100%
			padding-left 20px
			padding-right 20px
			margin 120px auto
			position relative
			.slide_title
				font-size 40pt
			.slide_s_title
				font-size 20pt
			.slide_quote
				font-size 20pt
				position absolute
				bottom 200px

.main_block
	position absolute
	width 100%
	top 100%

.content_inner
	max-width 1240px
	padding-left 0!important
	padding-right 0!important

.directions_block
	background-color green
	overflow hidden
	.direction_item
		margin 40px auto
		.direction_title
			margin-bottom 20px
			text-align center
			font-size 16pt
		.direction_collects
			overflow hidden
			&.x1 .collect_item
				width 100%
				.collect_image
					padding-top 40%
			&.x2 .collect_item
				width 50%
				.collect_image
					width 100%
					padding-top 100%
					box-sizing border-box
			&.x3 .collect_item
				width 33.3333333333%
				.collect_image
					width 100%
					padding-top 100%
					box-sizing border-box
			.collect_item
				float left
				margin-bottom 20px
				background-color rgb(101, 102, 107)
				.collect_title
					text-align center
					font-size 32pt
				.collect_image
					background-color rgb(243, 153, 219)
					position relative
					margin 0 auto
					.image_in
						top 20px
						left 20px
						right 20px
						bottom 20px
						position absolute
						margin auto
						background-color rgb(37, 86, 125)
						&:hover .quote
							opacity 1
					.quote
						text-align center
						width 80%
						top 0
						left 0
						right 0
						bottom 0
						margin auto
						position absolute
						background-color red
						display table
						opacity 0
						span
							font-size 22pt
							display table-cell
							vertical-align middle