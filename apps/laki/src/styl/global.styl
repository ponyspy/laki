@import '_fonts.styl'
@media screen and (max-width: 680px)
	@import 'mobile/_global.styl'

html, body
	margin 0
	padding 0
	height 100%
	font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;

.maket_block
	height 100%

.title_block
	overflow hidden
	background-color grey
	z-index 999999
	position absolute
	width 100%
	z-index 99999999
	top 0

.content_block
	background-color lightgrey

.footer_block
	background-color maroon
	height 80px
	text-align center

.footer_inner, .content_inner, .title_inner
	max-width 1200px
	padding-left 20px
	padding-right 20px
	margin 0 auto

.logo
	float left
	span
		display block
		margin-top 40px
		float left
	img
		float left
		display block
		width 200px
		background-color rgb(185, 213, 237)

.stargazer_block
	float right
	margin-top 40px

.menu_block
	float right
	margin-top 40px
	a
		margin-left 40px