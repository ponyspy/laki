@import '_fonts.styl'
@media screen and (max-width: 680px)
	@import 'mobile/_global.styl'

html, body
	margin 0
	padding 0
	height 100%
	font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;

.maket_block
	height 100%

.title_block
	overflow hidden
	background-color rgba(0, 0, 0, 0.5)
	// background-color grey
	z-index 999999
	position absolute
	width 100%
	z-index 99999999
	top 0
	span
	a
		color white
		text-decoration none

// .content_block
// 	background-color lightgrey

.footer_block
	// background-color maroon
	text-align center
	padding-top 20px
	padding-bottom 20px
	.copy_block
		font 14pt/16pt 'RegalTextPro Bold'
		div
			margin-bottom 5px
	.social_block
		margin-bottom 10px
		img
			width 30px
			margin-right 10px

.footer_inner, .content_inner, .title_inner
	max-width 1200px
	padding-left 20px
	padding-right 20px
	margin 0 auto

.logo
	float left
	img
		float left
		padding-top 20px
		padding-bottom 20px
		display block
		width 180px
		// background-color rgb(185, 213, 237)

.lang_block
	margin-top 40px
	margin-left 60px
	float left
	a
		display block
		font 18pt/16pt 'RegalFinessePro MedIt'

.stargazer_block
	float right
	margin-top 40px

.menu_block
	float right
	margin-top 40px
	font 16pt/18pt 'Gerbera'
	a
		margin-left 40px

.cut
	padding-top 40px
	padding-bottom 40px
	font 32pt/36pt 'RegalTextPro RegBold'
	text-align center
	border-top 1px solid black
	border-bottom 1px solid black
	a
		color black
		text-decoration none
		border-bottom 2px solid black
	&.instagram
		img
			width 80px
			margin 0 auto
			display block
		a
			display inline-block
			border-bottom 2px solid transparent
			&:hover
				border-bottom 2px solid black